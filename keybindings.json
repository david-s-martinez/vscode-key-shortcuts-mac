[
    // =================================================================
    //  GENERAL
    // =================================================================
    {
        "key": "ctrl+shift+p",
        "command": "workbench.action.showCommands",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+shift+n",
        "command": "workbench.action.newWindow"
    },
    {
        "key": "ctrl+shift+w",
        "command": "workbench.action.closeWindow"
    },
    {
        "key": "ctrl+,",
        "command": "workbench.action.openSettings"
    },
    {
        "key": "ctrl+k ctrl+s",
        "command": "workbench.action.openGlobalKeybindings"
    },

    // =================================================================
    //  BASIC EDITING (Editor + Chat + Search + Inputs)
    // =================================================================
    {
        "key": "ctrl+a",
        "command": "editor.action.selectAll",
        "when": "textInputFocus && !terminalFocus"
    },
    // --- Undo / Redo ---
    {
        "key": "ctrl+z",
        "command": "undo",
        "when": "textInputFocus && !terminalFocus"
    },
    {
        "key": "ctrl+y",
        "command": "redo",
        "when": "textInputFocus && !terminalFocus"
    },
    // Explicit unbind for Mac's default redo to prevent conflicts
    {
        "key": "shift+cmd+z",
        "command": "-redo"
    },
    {
        "key": "cmd+z",
        "command": "-undo"
    },

    // --- Clipboard ---
    {
        "key": "ctrl+x",
        "command": "editor.action.clipboardCutAction",
        "when": "textInputFocus && !terminalFocus"
    },
    {
        "key": "ctrl+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "textInputFocus && !terminalFocus" 
    },
    {
        "key": "ctrl+v",
        "command": "editor.action.clipboardPasteAction",
        "when": "textInputFocus && !terminalFocus"
    },

    // --- Line Manipulation ---
    {
        "key": "alt+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+k",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+enter",
        "command": "editor.action.insertLineAfter",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "editor.action.insertLineBefore",
        "when": "editorTextFocus"
    },
    
    // --- Indentation & Comments ---
    {
        "key": "ctrl+shift+\\",
        "command": "editor.action.jumpToBracket",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+]",
        "command": "editor.action.indentLines",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+[",
        "command": "editor.action.outdentLines",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+/",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+a",
        "command": "editor.action.blockComment",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+z",
        "command": "editor.action.toggleWordWrap",
        "when": "editorTextFocus"
    },

    // --- Cursor Navigation ---
    {
        "key": "ctrl+home",
        "command": "cursorTop",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+end",
        "command": "cursorBottom",
        "when": "editorTextFocus"
    },
    
    // --- Folding ---
    {
        "key": "ctrl+shift+[",
        "command": "editor.fold",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+]",
        "command": "editor.unfold",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+[",
        "command": "editor.foldRecursively",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+]",
        "command": "editor.unfoldRecursively",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+0",
        "command": "editor.foldAll",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+j",
        "command": "editor.unfoldAll",
        "when": "editorTextFocus"
    },

    // =================================================================
    //  MULTI-CURSOR & SELECTION
    // =================================================================
    {
        "key": "alt+click",
        "command": "editor.action.insertCursorAtPosition",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+up", 
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+down", 
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+u",
        "command": "cursorUndo",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+i",
        "command": "editor.action.insertCursorAtEndOfEachLineSelected",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+l",
        "command": "editor.action.expandLineSelection",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "editor.action.selectHighlights",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+f2",
        "command": "editor.action.changeAll",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+right",
        "command": "editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+left",
        "command": "editor.action.smartSelect.shrink",
        "when": "editorTextFocus"
    },

    // =================================================================
    //  SEARCH & REPLACE
    // =================================================================
    {
        "key": "ctrl+f",
        "command": "actions.find"
    },
    {
        "key": "ctrl+h",
        "command": "editor.action.startFindReplaceAction"
    },
    {
        "key": "f3",
        "command": "editor.action.nextMatchFindAction",
        "when": "editorFocus"
    },
    {
        "key": "shift+f3",
        "command": "editor.action.previousMatchFindAction",
        "when": "editorFocus"
    },
    {
        "key": "alt+enter",
        "command": "editor.action.selectAllMatches",
        "when": "findWidgetVisible"
    },
    {
        "key": "ctrl+d",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+k ctrl+d",
        "command": "editor.action.moveSelectionToNextFindMatch",
        "when": "editorFocus"
    },

    // =================================================================
    //  RICH LANGUAGES EDITING
    // =================================================================
    {
        "key": "ctrl+space",
        "command": "editor.action.triggerSuggest",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+space",
        "command": "editor.action.triggerParameterHints",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+i",
        "command": "editor.action.formatDocument",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+f",
        "command": "editor.action.formatSelection",
